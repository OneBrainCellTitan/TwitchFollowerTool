<Window x:Class="TwitchFollowerTool_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitchFollowerTool_WPF"
        xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
        mc:Ignorable="d"
        Title="Twitch Follower Tool" Height="720" Width="1080"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackground}">

    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Background" Value="#6441A5"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#523585"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="BlockButtonStyle" TargetType="Button">
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Background" Value="#6441A5"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#523585"/>
                    </Trigger>

                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Background" Value="#4d4d4d"/>
                        <Setter Property="Foreground" Value="#a0a0a0"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

           
            <Style x:Key="HeaderButtonStyle" TargetType="Button">
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Background" Value="#6441A5"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#523585"/>
                    </Trigger>
                </Style.Triggers>
            </Style>


            <Style TargetType="{x:Type DataGridRow}">
                <Setter Property="Background" Value="{DynamicResource DataGridRowBackground}"/>
                <Setter Property="Foreground" Value="{DynamicResource DataGridRowForeground}"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource DataGridHoverBackground}"/>
                        <Setter Property="Foreground" Value="{DynamicResource DataGridHoverForeground}"/>
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="{DynamicResource DataGridSelectedBackground}"/>
                        <Setter Property="Foreground" Value="{DynamicResource DataGridSelectedForeground}"/>
                    </Trigger>

                    <MultiTrigger>
                        <MultiTrigger.Conditions>
                            <Condition Property="IsSelected" Value="True"/>
                            <Condition Property="IsKeyboardFocusWithin" Value="False"/>
                        </MultiTrigger.Conditions>
                        <MultiTrigger.Setters>
                            <Setter Property="Background" Value="{DynamicResource DataGridSelectedUnfocusedBackground}"/>
                            <Setter Property="Foreground" Value="{DynamicResource DataGridSelectedUnfocusedForeground}"/>
                        </MultiTrigger.Setters>
                    </MultiTrigger>
                </Style.Triggers>
            </Style>
            <Style TargetType="{x:Type DataGridColumnHeader}">
                <Setter Property="Background" Value="{DynamicResource DataGridHeaderBackground}"/>
                <Setter Property="Foreground" Value="{DynamicResource DataGridHeaderForeground}"/>
            </Style>


            <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ToggleButton}">
                            <Grid>
                                <Border x:Name="BackgroundBorder" CornerRadius="10" Width="40" Height="20" Background="#555555" />
                                <Ellipse x:Name="Ellipse" Width="16" Height="16" Fill="White" HorizontalAlignment="Left" Margin="2,0,0,0">
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform x:Name="Transform" />
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="BackgroundBorder" Property="Background" Value="#6441A5" />
                                    <Setter TargetName="Ellipse" Property="HorizontalAlignment" Value="Right" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>


        <Button x:Name="AuthorizeButton" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Click="AuthorizeButton_Click">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="&#xE726;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="20"/>
                <TextBlock Text="Увійти через Twitch" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>


        <Grid x:Name="MainGrid" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <Border Grid.Row="0" Background="{DynamicResource HeaderBackground}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse Width="40" Height="40">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding StreamerAvatarUrl}"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="{Binding StreamerName}" FontWeight="Bold" Foreground="{DynamicResource HeaderText}" FontSize="16" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="20,0,0,0">
                        <Button x:Name="GetFollowersButton" Content="Оновити список фоловерів" Click="GetFollowersButton_Click" Style="{StaticResource HeaderButtonStyle}"/>
                        <Button x:Name="AnalyzeAllButton" Content="Запустити повний аналіз" Click="AnalyzeAllButton_Click" Style="{StaticResource HeaderButtonStyle}"/>
                    </StackPanel>


                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,0">
                        <TextBlock Text="Темна тема" Foreground="{DynamicResource HeaderText}" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14"/>
                        <ToggleButton x:Name="ThemeToggleButton" 
                                      IsChecked="True"
                                      Style="{StaticResource ToggleButtonStyle}"
                                      Checked="ThemeToggleButton_Checked" 
                                      Unchecked="ThemeToggleButton_Unchecked"/>
                    </StackPanel>


                    <Button Grid.Column="3" x:Name="LogoutButton" Content="Вийти" Background="#E64A4A" Click="LogoutButton_Click"/>
                </Grid>
            </Border>

            <DataGrid Grid.Row="1" 
                      x:Name="FollowersGrid"
                      ItemsSource="{Binding Followers}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      Background="{DynamicResource DataGridBackground}"
                      BorderThickness="0"
                      SelectedCellsChanged="FollowersGrid_SelectedCellsChanged"
                      Sorting="FollowersGrid_Sorting">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Нікнейм" Binding="{Binding UserName}" Width="2*"/>
                    <DataGridTemplateColumn Header="Статус аналізу ↓" SortMemberPath="BadCount" Width="3*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <emoji:TextBlock Text="{Binding Status}" Padding="5,0" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Дії" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Заблокувати" 
                                        Click="BlockButton_Click"
                                        IsEnabled="{Binding IsBlockButtonEnabled}"
                                        Style="{StaticResource BlockButtonStyle}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

                <DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <Border Margin="10" Padding="10" Background="{DynamicResource DetailsBackground}" CornerRadius="4">
                            <ItemsControl ItemsSource="{Binding Details}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,2">
                                            <emoji:TextBlock Text="{Binding Icon}" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding ChannelName}" FontWeight="Bold" Margin="5,0" Foreground="{DynamicResource DetailsForeground}"/>
                                            <TextBlock Text="{Binding FollowDate}" Foreground="{DynamicResource DetailsMutedForeground}" Margin="5,0"/>
                                            <TextBlock Text="-" Margin="5,0" Foreground="{DynamicResource DetailsForeground}"/>
                                            <TextBlock Text="{Binding Reason}" TextWrapping="Wrap" Foreground="{DynamicResource DetailsForeground}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>
            </DataGrid>

            <Border Grid.Row="2" 
        Background="{DynamicResource HeaderBackground}" 
        BorderBrush="{DynamicResource BorderColor}" 
        BorderThickness="0,1,0,0"
        Padding="5,3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                   x:Name="StatusText" 
                   Text="Готово до роботи." 
                   Foreground="{DynamicResource HeaderText}"
                   VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="1" VerticalAlignment="Center">
    <Hyperlink NavigateUri="https://send.monobank.ua/jar/6TacEhMUp2" 
               RequestNavigate="SupportLink_Click"
               TextDecorations="None">
        
        <Hyperlink.Style>
            <Style TargetType="Hyperlink">
                <Setter Property="Foreground" Value="White"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Foreground" Value="White"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Hyperlink.Style>
        
        <emoji:TextBlock Text="Підтримати проєкт ❤️"/>
        
    </Hyperlink>
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
